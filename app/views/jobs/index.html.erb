<div class="col-md-8 col-centered">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3>
        职位列表

        <div class="pull-right">
          <%= link_to("添加职位", new_job_path, :class => "btn btn-default" ) %>
        </div>

        <div class="dropdown clearfix pull-right">
            <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              排序
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
                <li>
                  <%= link_to("薪资下限", jobs_path(:order => "by_lower_bound")) %>
                </li>
                <li>
                    <%= link_to("薪资上限", jobs_path(:order => "by_upper_bound")) %>

                </li>
                <li>
                  <%= link_to("刊登时间", jobs_path ) %>
                </li>
            </ul>
        </div>
    </div>
      </h3>
    <div class="panel-body">
      <table class="table table-boldered">
          <thead id="main-content">
              <tr>
                  <th>职位名称</th>
                  <th>薪资下限</th>
                  <th>薪资上限</th>
                  <th>刊登时间</th>
              </tr>

          </thead>
          <tbody id="main-content">
              <% @jobs.each do |job| %>
              <tr>
                  <td>
                      <%= link_to(job.title, job_path(job)) %>
                  </td>
                  <td>
                      <%= job.wage_lower_bound %>
                  </td>
                  <td>
                      <%= job.wage_upper_bound %>
                  </td>
                  <td>
                      <%= job.created_at.strftime("%m-%d-%y") %>
                  </td>
              </tr>
              <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
