<div class="col-md-8 col-centered">


<div class="panel panel-warning">
  <div class="panel-heading"><h3>Add a job</h3></div>
  <div class="panel-body">
    <%= simple_form_for @job do |f| %>

    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :wage_lower_bound, :label => "Salary Min." %>
    <%= f.input :wage_upper_bound, :label => "Salary Max." %>
    <%= f.input :contact_email %>
    <%= f.input :is_hidden %>

      <%= f.submit "Submit", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
</div>
